{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/instructors.css">
{% endblock %}

{% block content %}
    <div class="card">
        <section 
            style="background: url({{instructor.avatar}}) no-repeat center"
        >
        </section>
        <section class="details">
            <h3>Details</h3>
            <div class="item">
                <div>Istructor</div>
                <div>{{instructor.name}}</div>
            </div>
            <div class="item">
                <div>Age</div>
                <div>{{instructor.age}}</div>
            </div>
            <div class="item">
                <div>Gender</div>
                <div>{{"MALE" if instructor.gender == "M" else "FEMALE"}}</div>
            </div>
            <div class="item">
                <div>Attendance</div>
                <div>
                    {% for service in instructor.services %}
                        <span>{{service}}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Since</div>
                <div>{{instructor.created_at}}</div>
            </div>
            <a 
                href="/instructors/{{instructor.id}}/update"
                class="button"
            >
                Editar
            </a>
        </section>
    </div>
{% endblock %}