{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles.css">
{% endblock %}

{% block content %}
    <div class="card table-container">
        <a href="/instructors/create">New</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Services</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar}})"></span>
                            {{instructor.name}}
                        </td>
                        <td>{{instructor.services}}</td>
                        <td>
                            <a href="/instructors/{{instructor.id}}">
                                Show
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}