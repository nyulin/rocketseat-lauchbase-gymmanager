<div class="item">
    <div>Avatar URL</div>
    <input 
        type="url"
        name="avatar"
        placeholder="http://"
        value="{{instructor.avatar}}"
    />
</div>
<div class="item">
    <div>Name</div>
    <input 
        type="text"
        name="name" 
        value="{{instructor.name}}"
    />
</div>
<div class="item">
    <div>Date of Birth</div>
    <input 
        type="date"
        name="birth" 
        value="{{instructor.birth}}"
    />
</div>
<div class="item">
    <div>Gender</div>
    <span>
        <input 
            type="radio"
            name="gender"
            value="M"
            {% if instructor.gender == "M" %}}
                checked
            {% endif %}}
        />
        Male
    </span>
    <span>
        <input 
            type="radio"
            name="gender"
            value="F"
            {% if instructor.gender == "F" %}}
                checked
            {% endif %}}
        />
        Female
    </span>
</div>
<div class="item">
    <div>Attendance</div>
    <div>
        <input 
            type="text" 
            name="services"
            placeholder="Separate services with a comma"
            value="{{instructor.services}}"
        />
    </div>
</div>
<button type="submit">Save</button>