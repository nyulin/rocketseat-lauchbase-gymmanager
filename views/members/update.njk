{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/instructors.css">
{% endblock %}

{% block content %}
    <div class="card">
        <section 
            style="background: url({{instructor.avatar}}) no-repeat center"
        >
        </section>
        <section class="details">
            <form method="POST" action="/instructors?_method=PUT">
                <h3>Edit Instructor</h3>

                {% include 'instructors/fields.njk' %}

                <input type="hidden" name="id" value="{{instructor.id}}" />           
            </form>
            <form id="form-delete" method="POST" action="/instructors?_method=DELETE">
                <input type="hidden" name="id" value="{{instructor.id}}" /> 
                <button type="submit">Delete</button>
            </form>
        </section>
    </div>
{% endblock %}